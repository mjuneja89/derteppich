
<head>

<title>Der Teppich International: New Carpet</title>

</head>

<body>


<%= render 'shared/navbar' %>

<div class="container-fluid">
   
   <div class="row">
     
     <div class="col-sm-6 col-sm-offset-3" style="margin-top: 3%; text-align: center">

        <div id="avatarbox">
          <img class="fitpreview" />
        </div>
       
       <%= form_for(@carpet, url: carpet_updatecategory_path(@carpet)) do |f| %>
       
           <%= f.select(:category, options_for_select([['category', nil], ['hand tufted', 'hand tufted'], ['handloom weave', 'handloom weave'], ['handloom durries', 'handloom durries'], ['hand knotted', 'hand knotted']]), {}, {id: "DerInput"}) %>


          <%= f.submit "update", :id => "AdminButton1", :class => "btn btn-default", :style => "margin-top: 3%" %>

       <% end %>

     </div>

   </div>

</div>
	
</body>