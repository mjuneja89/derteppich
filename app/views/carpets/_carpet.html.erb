<div class="col-sm-3" style="margin-top: 3%;">
<div class="CarpetBox">
    <div class="CarpetImageBox">
       <%= image_tag(carpet.photo_url, :class => "fitimg") %> 
    </div>
    <div class="CarpetNameBox">
         <h3><%= carpet.name %></h3> 
    </div>
    <div id="AdminButton">
     <%= link_to edit_carpet_path(carpet_path), :class => "btn btn-default" do %> 
      edit
     <% end %> 
    </div>
    <div id="AdminButton">
     <%= link_to carpet_path(carpet), :class => "btn btn-default", :method => "destroy" do %>
      delete
     <% end %> 
    </div>
  </div> 
</div>